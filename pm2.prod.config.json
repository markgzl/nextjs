{
  "apps": [
    {
      "name": "lljy",
      "script": "./server/index.ts",
      "interpreter": "./node_modules/.bin/ts-node",
      "interpreter_args": "-P ./server -r tsconfig-paths/register",
      "cwd": "./",
      "autorestart": true,
      "max_memory_restart": "1G",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "watch": false,
      "kill_timeout": 100000,
      "exec_mode": "fork",
      "instances": "2",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
